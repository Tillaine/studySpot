<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Add a New Comment to <%= spot.name %> </h1>
    <div class="row; margin: 25;">
        <div style="width: 30%; margin: auto;">
            <form action="/spots/<%= spot._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name='comment[text]' placeholder="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-lg btn-warning">Submit!</button>
                </div>
            </form>
            <a href="/spots">Go To Study Spots</a>
    </div>
</div>


<%- include("../partials/footer") %>