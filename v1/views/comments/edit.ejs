<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="row; margin: 25;">
        <div style="width: 30%; margin: auto;">
            <form action="/spots/<%= spotID %>/comments/<%=comment._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name='comment[text]' value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-lg btn-warning">Submit!</button>
                </div>
            </form>
            <a href="/spots">Go To Study Spots</a>
    </div>
</div>


<%- include("../partials/footer") %>