<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Update <%= spot.name %></h1>
    <div class="row; margin: 25;">
        <div style="width: 30%; margin: auto;">
            <form action="/spots/<%= spot._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name='spot[name]' value="<%= spot.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name='spot[image]' value="<%= spot.image %>">
                </div>
                <div class="form-group">
                <div class="form-group">
                    <input class="form-control" type="text" name='spot[description]' value="<%= spot.description %>">
                </div>
                    <button class="btn btn-block btn-lg btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/spots">Go To Study Spots</a>
    </div>
</div>

<%- include("../partials/footer") %>